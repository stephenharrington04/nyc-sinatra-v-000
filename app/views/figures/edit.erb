<form action="/figures" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Name: </label>
  <input type="text" name="figures[name]" value="<%= @figure.name %>" id="figure_name"><br>

  <label>Titles: </label>
  <% Title.all.each do |title| %>
    <%= title.name %>
    <input type="checkbox" name="figures[title_ids][]" value="<%= @figuretitle.id %>" id="<%= @figure.title.id %>"
    <%= 'checked' if @figure.titles.include?(title) %>>
  <% end %><br>

  <label>and/or create new title: </label>
  <input type="text" name="title[name]" id="new_title"><br>

  <label>Landmarks: </label>
  <% Landmark.all.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" name="figures[landmark_ids][]" value="<%= @figure.landmark.id %>" id="<%= @figure.landmark.id %>"
    <%= 'checked' if @figure.landmarks.include?(landmark) %>>
  <% end %><br>

  <label>and/or create new landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>

  <input type="submit" value="Update Figure">

</form>
